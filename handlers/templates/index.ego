<%! func Index(w io.Writer, session *rationl.Session) error %>

<%% import "github.com/benbjohnson/rationl" %%>

<!DOCTYPE html>
<html lang="en">
  <% head(w) %>

  <body class="index">
    <div class="container">
      <div class="header">
        <h3 class="text-muted">Rationl</h3>
      </div>

      <div class="jumbotron">
